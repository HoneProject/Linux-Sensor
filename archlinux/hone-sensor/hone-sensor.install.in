extramodules=/usr/lib/modules/$(uname -r)/extramodules

post_install() {
  post_upgrade
  getent group hone > /dev/null || groupadd --system hone
}

post_upgrade() {
  depmod $(< $extramodules/version) &>/dev/null
}

post_remove() {
  post_upgrade
  if getent group hone > /dev/null; then
    echo "Not removing 'hone' group."
  fi
}

